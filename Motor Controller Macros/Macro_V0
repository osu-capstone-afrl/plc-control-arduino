VAR POS_IN 0 			//Initialize Global Variable

// Find min and max positions
VAR MIN_POS TMN? [{1}]
VAR MAX_POS TMX? [{1}]
VAR V_to_mm (MAX_POS-MIN_POS)/5	//(mm/V), multiply by input to get output position

MAC BEG main 			//Start recording MAIN macro
CPY POS_IN TAV? [{1}]		//Record input signal
MOV {1 VAR? [{POS_IN}]}	//Initialize movement
MAC START main			//Loop MAIN for all time
MAC END			//For completeness

MAC START main			//Initialize program

CPY <Variable> <CMD?>

MOV {<AxisID> <Position>} Set Target Position

TAV? [{<AnalogInputID>}]  Get Analog Input Voltage

VAR? [{<Variable>}] Get Variable Value
